package chap999_homework_2023_04_02_class;

import java.util.Scanner;

public class No1 {
	
	public String stnName;
	public int stnNum;
	public String major;
	
	public No1(){
		
	}
	
	public void insertStnInfo() {
		Scanner sc = new Scanner(System.in);
		System.out.println("학생 정보를 입력하세요. 이름 학번 전공");
		stnName = sc.nextLine();
		stnNum = sc.nextInt();
		sc.nextLine();
		major = sc.nextLine();
	}
	
	public void printStnInfo() {
		System.out.println(this.stnName + this.stnNum + this.major);
	}
}
