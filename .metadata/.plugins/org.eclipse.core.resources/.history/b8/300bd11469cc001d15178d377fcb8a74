package chap16_collectionFramework;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;

import chap06_class.car.Car;

public class _07_iterator {

	public static void main(String[] args) {
		
		// Map<String, String> map; //set(entryset)을 이용해서 iterator 사용 가능
		
		List<Car> cList = new ArrayList<Car>();
		
		Car car = new Car("현대", "제네시스", "은색", 5000);
		
		cList.add(car);
		
		car = new Car("현대", "아반떼", "흰색", 3000);
		
		cList.add(car);
		
		car = new Car("현대", "소나타", "검은색", 4000);
		
		cList.add(car);
		
		car = new Car("기아", "ev6", "파란색", 3000);
		
		cList.add(car);
		car = new Car("기아", "모하비", "빨간색", 5000);
		
		cList.add(car);
		
		//iterator로 요소를 받아오기
		Iterator it = cList.iterator();
		
		while(it.hasNext()) {
			Car c = (Car)it.next();
			c.carInfo();
			if(c.company.equals("현대"))
				it.remove();
		}
		
		
		
	}

}
